{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],

  "includePaths": ["**/testcontainers.properties"],
  "regexManagers": [
    {
      "fileMatch": [
        ".*testcontainers\\.properties"
      ],
      "matchStrings": [
        "[a-zA-Z]+=(?<depName>.*?):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
